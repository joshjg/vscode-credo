{
  "name": "vscode-credo",
  "description": "Integrates Credo for Elixir into VS Code",
  "author": "Joshua Goldman",
  "license": "MIT",
  "version": "0.1.1",
  "publisher": "joshjg",
  "repository": {
    "type": "git",
    "url": "https://github.com/joshjg/vscode-credo.git"
  },
  "engines": {
    "vscode": "^1.6.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:elixir"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Credo configuration",
      "properties": {
        "languageServerCredo.flags": {
          "type": "string",
          "default": "--strict",
          "description": "Flags to be appeneded to `mix credo` (default: `--strict`)"
        },
        "languageServerCredo.executablePath": {
          "type": "string",
          "default": "mix",
          "description": "Absolute path to the mix executable. By default it checks for mix in your project root."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.40",
    "@types/node": "^7.0.8",
    "mocha": "^3.2.0",
    "typescript": "^2.2.1",
    "vscode": "^1.1.0"
  },
  "dependencies": {
    "vscode-languageclient": "^3.1.0"
  }
}
